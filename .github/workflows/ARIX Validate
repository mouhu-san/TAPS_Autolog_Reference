name: ARIX Validate
on:
  push:
  pull_request:

jobs:
  validate:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 18

      - name: Install ajv
        run: npm i -g ajv-cli ajv-formats

      - name: Schema validate (JSONL)
        run: |
          ajv validate -c ajv-formats \
            -s ./arix-16/schema/arix16.schema.json \
            -d "./arix-16/examples/exports_sample/*.jsonl" \
            --spec=draft2020

      - name: TSV header check
        run: node ./scripts/validate_tsv_headers.js
